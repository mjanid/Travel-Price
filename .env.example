# ─── Application ───────────────────────────────────────────
APP_NAME="Travel Price Scraper"
DEBUG=false

# ─── Database ──────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/travel_price

# ─── Redis ─────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ─── Auth / JWT ────────────────────────────────────────────
SECRET_KEY=change-me-to-a-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── CORS ──────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000

# ─── Scraping ──────────────────────────────────────────────
SCRAPE_INTERVAL_MINUTES=60

# ─── Alerts / Notifications ───────────────────────────────
ALERT_COOLDOWN_HOURS=6
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=alerts@travelprice.local

# ─── Playwright ──────────────────────────────────────────
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT_MS=45000
PLAYWRIGHT_SCREENSHOT_ON_FAILURE=false

# ─── Frontend (used by Next.js) ───────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000
